@page
@model Razorpages.Pages.Checkout.checkoutModel
@{
}

<h1>Your Order!</h1>
@{
    var imagePath = "~/images/Pizzas/" + (@Model.ImageTitle+ ".png");
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src="@imagePath" class="w-100" asp-append-version="true"/>
        <p>Your order for the @Model.PizzaName pizza is ready!</p>
        <p>Total price for your order is :@Model.Pizzaprice</p>
        <br />
        <a class="btn btn-primary mt-1 mx-auto" asp-area="" asp-page="Orders">confirmOrder</a>
    </div>
</div>